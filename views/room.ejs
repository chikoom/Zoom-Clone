<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ZOOM Clone</title>
    <link rel="stylesheet" href="style.css" />
    <script>
      const ROOM_ID = '<%= roomID %>'
      console.log('ROOM ID', '<%= roomID %>')
    </script>
  </head>
  <body>
    <div class="main">
      <div class="main-left">
        <div class="main-videos">
          <div id="video-grid"></div>
        </div>
        <div class="main-controls">
          <div class="main-controls-block">
            <div class="main-controls-button">
              <button id="muteUnmute" onclick="muteUnmute()">Mute</button>
            </div>
            <div class="main-controls-button">
              <button id="playStop" onclick="playStop()">Stop video</button>
            </div>
          </div>

          <div class="main-controls-block">
            <div class="main-controls-button">
              <button onclick="">Security</button>
            </div>
            <div class="main-controls-button">
              <button onclick="">Participants</button>
            </div>
            <div class="main-controls-button">
              <button onclick="">Chat</button>
            </div>
          </div>

          <div class="main-controls-block">
            <div class="main-controls-button">
              <button onclick="">Leave Broadcast</button>
            </div>
          </div>
        </div>
      </div>
      <div class="main-right">
        <div class="main-chat-header">
          <h3>Chat</h3>
        </div>
        <div class="main-chat-window"></div>
        <div class="main-chat-input">
          <input
            type="text"
            name="enterName"
            id="enterName"
            placeholder="Enter your name"
          />
          <input
            type="text"
            name="chatMessage"
            id="chatMessage"
            placeholder="Type message"
          />
        </div>
      </div>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.5.1.js"
      integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
      crossorigin="anonymous"
    ></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="script.js"></script>
  </body>
</html>
